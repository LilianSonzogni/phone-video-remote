{
  "manifest_version": 3,
  "name": "Phone Video Remote",
  "version": "1.0.0",
  "description": "Control video playback from your phone - no more getting up from the couch!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.crunchyroll.com/*",
    "*://static.crunchyroll.com/*",
    "*://*.primevideo.com/*",
    "*://*.disneyplus.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.crunchyroll.com/*",
        "*://*.primevideo.com/*",
        "*://*.disneyplus.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://static.crunchyroll.com/vilos-v2/web/vilos/player.html*"
      ],
      "js": ["content-iframe.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Phone Video Remote"
  }
}
